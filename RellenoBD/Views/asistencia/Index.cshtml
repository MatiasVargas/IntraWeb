@model IEnumerable<RellenoBD.asistencia>

@{
    ViewBag.Title = "Index";
}

<h2>Asistencia Alumno</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Horas Asistidas
        </th>
        <th>
            Alumno
        </th>
        <th>
            Sección
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HorasAsist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.alumno.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.alumno_has_seccion.seccion.Numero)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
