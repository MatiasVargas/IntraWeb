@model IEnumerable<RellenoBD.horario_seccion>

@{
    ViewBag.Title = "Lista";
}

<h2>Horario - Seccion</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Horario
        </th>
        <th>
            Sala
        </th>
        <th>
            Seccion
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.horario.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sala.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.seccion.Numero)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
